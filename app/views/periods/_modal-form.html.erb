<%= simple_form_for(period, html: {class: "form-horizontal"}, remote: true) do |f| %>
  <%= f.error_notification %>
  <div class="modal fade" id="newPeriod" tabindex="-1" role="dialog" aria-labelledby="periodModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="periodModalLabel"><i class="fa fa-pencil"> Period</i></h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <%= f.input :name %>
          <%= f.input :start_time %>
          <%= f.input :end_time %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">Close</button>
          <%= f.button :submit, "Create", class: "btn btn-primary btn-sm" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
