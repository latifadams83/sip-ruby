<tr id="periodRow_<%= period.id %>">
  <td><%= period.name %></td>
  <td><%= period.start_time.strftime("%H: %M %S") %></td>
  <td><%= period.end_time.strftime("%H: %M %S") %></td>
  <td>
    <div class="button-group" role="group" aria-label="Actions">
      <button type="button" name="updatePeriod" data-toggle= "modal" data-target="#updatePeriod_<%= period.id %>" class="btn btn-warning btn-sm"><i class="fa fa-pencil"></i></button>
      <%= link_to "#{content_tag(:i, '', :class => ("fa fa-trash"))}".html_safe, period_path(period), method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-danger btn-sm", remote: true%>
    </div>

    <%= simple_form_for(period, html: {class: "form-horizontal"}, remote: true) do |f| %>
      <%= f.error_notification %>
      <div class="modal fade" id="updatePeriod_<%= period.id %>" tabindex="-1" role="dialog" aria-labelledby="periodModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="periodModalLabel"><i class="fa fa-pencil"> Period</i></h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <%= f.input :name %>
              <%= f.input :start_time %>
              <%= f.input :end_time %>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">Close</button>
              <%= f.button :submit, "Update", class: "btn btn-primary btn-sm" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </td>
</tr>
