<%= simple_form_for(staff_department, html: {class: "form-horizontal"}, remote: true) do |f| %>
  <%= f.error_notification %>
  <div class="modal fade" id="newDepartment" tabindex="-1" role="dialog" aria-labelledby="categoryModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="DepartmentModalLabel"><i class="fa fa-plus"> Staff Department</i></h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <br>
          <%= f.input :name, input_html: {class: "department_name"}, label: false, placeholder: "Department Name" %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">Close</button>
          <%= f.button :submit, "Create", class: "btn btn-primary btn-sm" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
