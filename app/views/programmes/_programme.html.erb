<tr id="programmeRow_<%= programme.id %>">
  <td><%= programme.name %></td>
  <td>
    <div class="button-group" role="group" aria-label="Actions">
      <button type="button" name="updateprogramme" data-toggle= "modal" data-target="#updateprogramme_<%= programme.id %>" class="btn btn-warning btn-sm"><i class="fa fa-pencil"></i></button>
      <%= link_to "#{content_tag(:i, '', :class => ("fa fa-trash"))}".html_safe, programme_path(programme), method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-danger btn-sm", remote: true%>
    </div>

    <%= simple_form_for(programme, html: {class: "form-horizontal"}, remote: true) do |f| %>
      <%= f.error_notification %>
      <div class="modal fade" id="updateprogramme_<%= programme.id %>" tabindex="-1" role="dialog" aria-labelledby="programmeModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="programmeModalLabel"><i class="fa fa-pencil"> Programme</i></h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <br>
              <%= f.input :name %>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">Close</button>
              <%= f.button :submit, "Update", class: "btn btn-primary btn-sm" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </td>
</tr>
