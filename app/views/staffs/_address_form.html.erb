<%= render partial: 'staff_tabs', locals: {obj: @staff} %>
<%= simple_form_for(@staff_address, url: create_address_staff_path, method: 'post') do |f| %>
  <div class="card" style="border-top: none !important;">
    <div class="card-block">
      <%= f.error_notification %>
      <%= f.input :address_type, collection: ['Residential', 'Work', 'Emergency'] %>
      <%= f.input :location %>
      <%= f.input :city %>
      <%= f.input :region %>
      <%= f.input :phone %>
      <%= f.input :email %>
      <%= f.input :postal_code %>
    </div>
    <div class="card-block">
      <div class="row">
        <div class="col-sm-9 offset-sm-3">
          <%= f.button :submit, "Save & Next", class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
