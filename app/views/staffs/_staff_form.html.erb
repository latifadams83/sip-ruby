<%= simple_form_for(staff, html: {class: "horizontal_form"}) do |f| %>
  <div class="card mx-4">
    <div class="card-header py-1" role="tab" id="PersonalInfo">
      <h5 class="mb-0">
        <a data-toggle="collapse"  href="#personal_info" aria-expanded="true" aria-controls="personal_info">
          <small>Personal Information</small>
        </a>
      </h5>
    </div>

    <div id="personal_info" class="collapse show" role="tabpanel" aria-labelledby="Personal Information">
      <div class="card-block">
        <%= f.error_notification %>
        <%= f.input :title, collection: ['Mr.', 'Mrs', 'Master', 'Dr.', 'Prof.', 'Mallam', 'Maulvi', 'Sheik', 'Pastor', 'Reverend', 'Father', 'other'], input_html: {class: 'custom-select'}, label_html: {class: "required"}%>
        <%= f.input :first_name %>
        <%= f.input :last_name %>
        <%= f.input :gender, collection: ['Male', 'Female'], input_html: {class: 'custom-select'} %>
        <%= f.input :date_of_birth, as: :string, input_html: {class: 'datepicker'} %>
        <%= f.input :religious_denomination, label: 'Rel. Denomination' %>
        <%= f.input :phone %>
        <%= f.input :marital_status, collection: ['Single', 'Married', 'Divorce'], input_html: {class: 'custom-select'} %>
        <%= f.input :photo %>
      </div>
    </div>
  </div>

  <div class="card mx-4">
    <div class="card-header py-1" role="tab" id="GeneralInfo">
      <h5 class="mb-0">
        <a data-toggle="collapse"  href="#general_info" aria-expanded="true" aria-controls="general_info">
          <small>General Information</small>
        </a>
      </h5>
    </div>

    <div id="general_info" class="collapse show" role="tabpanel" aria-labelledby="General Information">
      <div class="card-block">
        <%= f.input :joining_date, as: :string, input_html: {class: 'datepicker'} %>
        <%= f.association :staff_department, label: 'Department', input_html: {class: 'custom-select'} %>
        <%= f.input :qualification %>
        <%= f.input :specialization %>
        <%= f.input :employment_date, as: :string, input_html: {class: 'datepicker'}%>
        <%= f.input :employee_id, label: 'Empoyee ID' %>
        <%= f.input :registered_no %>
        <%= f.input :sssnit_no %>
        <%= f.input :rank %>
      </div>
    </div>
  </div>

    <div class="card-block mb-2">
    <div class="row">
      <div class="col-md-9 offset-md-3">
        <%= link_to "Cancel", send(back_link, link_params), class: "btn btn-secondary " %>
        <%= f.button :submit, "#{action_text}", class: "btn btn-primary ml-5" %>
      </div>
    </div>
  </div>
<% end %>
