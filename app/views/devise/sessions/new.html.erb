<div class="card">
  <div class="card-block">
    <h4>Log In</h4> </div>
      <span class="alert"><%= alert %></span>

    <div class="card-block">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "horizontal-form"}) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, required: false, autofocus: true %>
          <%= f.input :password, required: false %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Log in", class: "btn-block btn-primary" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
</div>
