<%= f.input :portal_access, as: :radio_buttons, label: 'Portal Access?', checked: false, input_html: {class: "portalAcess"} %>
<div id="accountDetails" style="display: none;">
  <div class="form-group row">
    <div class="col-md-3 form-control-label"><label for="role" >Role</label></div>
    <div class="col-md-9">
    <%= select_tag :role, options_from_collection_for_select(@roles, :id, :name), include_blank: true, class: 'form-control form-control-sm string custom-select select' %></div>
  </div>
  <div class="form-group row">
    <div class="col-md-3 form-control-label"><label for="email" >Email</label></div>
    <div class="col-md-9"><input type="email" class="form-control form-control-sm string"></div>
  </div>
  <div class="form-group row">
    <div class="col-md-3 form-control-label"><label for="password">Password</label></div>
    <div class="col-md-9"><input type="password" class="form-control form-control-sm string"></div>
  </div>
</div>
